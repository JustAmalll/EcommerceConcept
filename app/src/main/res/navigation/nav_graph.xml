<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/homeStoreFragment"
        android:name="dev.amal.ecommerceconcept.fragments.home_store_fragment.HomeStoreFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_home_store">
        <action
            android:id="@+id/action_homeStoreFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
        <action
            android:id="@+id/action_homeStoreFragment_to_basketFragment"
            app:destination="@id/basketFragment" />
    </fragment>
    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="dev.amal.ecommerceconcept.fragments.details_fragment.ProductDetailsFragment"
        android:label="fragment_product_details"
        tools:layout="@layout/fragment_product_details">
        <action
            android:id="@+id/action_productDetailsFragment_to_basketFragment"
            app:destination="@id/basketFragment" />
    </fragment>
    <fragment
        android:id="@+id/basketFragment"
        android:name="dev.amal.ecommerceconcept.fragments.basket_fragment.BasketFragment"
        android:label="fragment_basket"
        tools:layout="@layout/fragment_basket" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="dev.amal.ecommerceconcept.fragments.splash_screen.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_homeStoreFragment"
            app:destination="@id/homeStoreFragment" />
    </fragment>

</navigation>